@using System.ComponentModel
<style>

    .ball {
        width: 25px;
        height: 25px;
        background-color: whitesmoke;
        position: relative;
    }

 </style>

<div class="ball"
     style="top: @(Top)px;left: @(Left)px;" />

@code {


    [Parameter]
    public int Top { get ; set ; }
   

    [Parameter]
    public int Left { get ; set ; }


}
