@page "/pong"

<h1>Pong</h1>

<style>
    .paddle {
        width: 25px;
        height: 100px;
    }

    .court {
        background-color: black;
        width: 600px;
        height: 400px;
    }

    .left {
        background-color: crimson;
        float: left;
        position: relative;
        left: 10;
    }

    .right {
        background-color: cyan;
        float: right;
        position: relative;
        left: 720;
    }
</style>

<div class="court">
    <div class="paddle left" style="top:@leftStyle" />
    <div class="paddle right" style="top:@rightStyle" />
</div>

<button class="btn btn-primary" @onclick="LeftUp">Up</button>
<button class="btn btn-primary" @onclick="LeftDown">Down</button>

@code {
    private int currentCount = 0;
    private int leftTop = 0;
    private int rightTop = 0;
    private string leftStyle = "0px";
    private string rightStyle = "0px";

    private void IncrementCount()
    {
        currentCount++;
    }
    private void LeftUp()
    {
        leftTop -= 10;
        leftStyle = $@"{leftTop}px";
    }
    private void LeftDown()
    {
        leftTop += 10;
        leftStyle = $@"{leftTop}px";
    }
}
